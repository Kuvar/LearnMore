@using LearnMore;
@model IList<Entities.Post>

<!-- Widget to display latest posts in sidebar -->
<div class="gadget">
    <h2 class="star"><span>Latest Posts</span></h2>
    <div class="clr"></div>

    @if (Model.Count > 0)
    {
        <ul class="sb_menu">
            @foreach (var post in Model)
            {
                <li>@Html.PostLink(post)</li>
            }
        </ul>
    }
    else
    {
        <p>No posts found!</p>
    }
</div>

