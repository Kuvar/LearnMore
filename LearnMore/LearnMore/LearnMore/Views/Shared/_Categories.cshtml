@using LearnMore;
@model IList<Entities.Category>

<!-- Widget to display categories in sidebar -->
<div class="gadget">
    <h2 class="star"><span>Categories</span></h2>
    <div class="clr"></div>

    @if (Model.Count > 0)
    {
        <ul class="sb_menu">
            @foreach (var category in Model)
            {
                <li>@Html.CategoryLink(category)</li>
            }
        </ul>
    }
    else
    {
        <p>No categories found!</p>
    }
</div>