@using LearnMore;
@model IList<Entities.Tag>

<!-- Widget to display tags in sidebar -->
<div class="tags sidebar gadget">
    <h2 class="star"><span>Tags</span></h2>
    <div class="clr"></div>
    @if (Model.Count > 0)
    {
        foreach (var tag in Model)
        {
            @Html.TagLink(tag)
        }
    }
    else
    {
        <p>No tags found!</p>
    }
</div>
