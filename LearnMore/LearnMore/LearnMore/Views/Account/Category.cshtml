@using MvcJqGrid
@{
    ViewBag.Title = "Category";
}
<div class="panel-heading">
    <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> @ViewBag.panelTitle</h3>
</div>
<div class="panel-body">
    <div ng-app="adminApp">
        <div ng-controller="categoryController">

            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th ng-click="sort('Id')">
                            Id
                            <span class="glyphicon sort-icon" ng-show="sortKey=='id'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                        </th>
                        <th ng-click="sort('Name')">
                            Category Name
                            <span class="glyphicon sort-icon" ng-show="sortKey=='Name'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                        </th>
                        <th ng-click="sort('UrlSlug')">
                            Url Slug
                            <span class="glyphicon sort-icon" ng-show="sortKey=='UrlSlug'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                        </th>
                        <th ng-click="sort('Description')">
                            Description
                            <span class="glyphicon sort-icon" ng-show="sortKey=='Description'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr dir-paginate="row in categories|orderBy:sortKey:reverse|itemsPerPage:10">
                        <td>{{row.Id}}</td>
                        <td>{{row.Name | uppercase}}</td>
                        <td>{{row.UrlSlug}}</td>
                        <td>{{row.Description}}</td>
                        <td>
                            <span ng-click="editCategory(row)" class="glyphicon glyphicon-pencil cursor-pointer" aria-hidden="true" data-toggle="modal" data-target="#dialog-edit"></span>
                            <span ng-click="deleteCategory(row)" class="glyphicon glyphicon-trash cursor-pointer" aria-hidden="true" data-toggle="modal" data-target="#dialog-delete"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
            <dir-pagination-controls max-size="10"
                                     direction-links="true"
                                     boundary-links="true">
            </dir-pagination-controls>
        </div>
    </div>
</div>

    @section Scripts {
        <script type="text/javascript">

        </script>
    }

